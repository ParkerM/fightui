{
    "extends": "../tslint.json",
    "rules": {
      "quotemark": {
        "options": [
          "single",
          "avoid-escape",
          "avoid-template"
        ]
      },
      "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
